@model List<TimePartModel>?
@if (Model != null && Model.Any())
{
    for (int i = 0; i < Model.Count; i++)
    {
        <h5>@Model[i].Time</h5>
        for(int j = 0; j < Model[i].Users.Count; j++)
        {
            <div class="form-check">
                <input type="radio"
                       name="SelectedNumber"
                       value="@Model[i].Time;@Model[i].Users[j].Id"
                       id="number@(i)"
                       @(i == 0 ? "required" : "") />
                @Model[i].Users[j].LastName @Model[i].Users[j].FirstName @Model[i].Users[j].MiddleName
            </div>
        }
    }
}
else
{
    <div class="alert alert-warning">
        Записи не найдены!
    </div>
}